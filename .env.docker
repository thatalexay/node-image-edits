# Docker Environment Configuration
# Copy this file to .env.production for production deployment

# API Keys (comma-separated list)
API_KEYS=your-secure-api-key-here,another-key-if-needed

# Source Code URL (AGPL compliance)
SOURCE_CODE_URL=https://github.com/thatalexay/node-image-editing

# File Upload Limits (bytes)
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=1 minute

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Logging
LOG_LEVEL=info

# Background Removal Model Configuration
SKIP_MODEL_DOWNLOAD=1

# Optional: GitHub Access Token (if needed for model downloads)
# GH_ACCESS_TOKEN=your_github_token_here
